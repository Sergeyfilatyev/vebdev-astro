---
const { title, content, isVisible = true } = Astro.props;

if (!isVisible) return null;

let htmlContent = '';
if (typeof content === 'string') {
  htmlContent = content;
} else if (content?.root?.children) {
  htmlContent = JSON.stringify(content);
}
---

<section class="py-12 md:py-20">
  <div class="container px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-bold text-primary-50 mb-6">
        {title}
      </h2>
    )}
    {htmlContent && (
      <div
        class="prose prose-invert prose-lg max-w-none text-primary-100"
        set:html={htmlContent}
      />
    )}
  </div>
</section>

<style>
  .prose {
    color: var(--color-primary-100);
  }
  
  .prose h2 {
    color: var(--color-primary-50);
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    color: var(--color-primary-50);
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.625;
  }
  
  .prose ul,
  .prose ol {
    margin-bottom: 1rem;
    margin-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose a {
    color: var(--color-primary-200);
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: var(--color-primary-300);
  }
</style>
