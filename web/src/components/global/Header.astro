---
import {Icon} from 'astro-icon/components';
import Button from '@/components/ui/Button.astro';

const {header} = Astro.props;
console.log('Header data:', header);
---

<header
	class='flex gap-1 bg-primary-900 w-full border-b border-primary-100/20'
	id='header'>
	<div class='container flex items-center justify-between gap-2 py-2 px-3'>
		<a
			class='flex items-center gap-2 transition-transform duration-300 active:scale-105 hover:scale-105'
			aria-label={header?.title || "Veb-Dev's Logo"}
			href='/'>
			{
				header?.logo?.url && (
					<img
						src={header.logo.url}
						alt={header.logo.alt || header?.title || 'Logo'}
						class='h-12 w-auto'
					/>
				)
			}
			{header?.title && <span class='text-xl font-bold'>{header.title}</span>}
		</a>
	</div>
</header>
